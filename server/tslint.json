{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "interface-name": [true, "never-prefix"],
    "member-access": [true, "no-public"],
    "jsx-boolean-value": false,
    "jsx-no-lambda": false,
    "curly": false,
    "object-literal-sort-keys": false,
    "no-console": false,
    "max-classes-per-file": false
  }
}
